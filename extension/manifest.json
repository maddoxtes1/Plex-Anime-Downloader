{
  "manifest_version": 3,
  "name": "Flask Auth Client",
  "version": "1.0.0",
  "description": "Extension Chrome/Opera pour se connecter Ã  un serveur Flask et afficher un dashboard.",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Flask Auth Client",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://anime-sama.eu/planning/*",
        "https://anime-sama.eu/catalogue/*/saison*/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}


