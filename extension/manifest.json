{
  "manifest_version": 3,
  "name": "Flask Auth Client",
  "version": "1.0.0",
  "description": "Extension Chrome/Opera pour se connecter Ã  un serveur Flask et afficher un dashboard.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Flask Auth Client"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://anime-sama.org/planning/*",
        "https://anime-sama.org/catalogue/*/saison*/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}


